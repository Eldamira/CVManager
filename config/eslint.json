{
    "env": {
        "node": true ,
        "jasmine" : true,
        "angular": true
    },

    "rules": {
        "quotes": [0, "single", "avoid-escape"],
        "no-trailing-spaces": [0, { "skipBlankLines": true }],
        "no-use-before-define" : 0,
        "no-mixed-spaces-and-tabs" : 0,
        "no-multi-spaces" : 0,
        "comma-spacing" : 0,
        "no-underscore-dangle" : 0,
        "eol-last" : 0,
        "key-spacing" : 0
    },

    "globals": {
        "browser": true,
        "document": true
    }
}
